{% extends 'base.html.twig' %}

{% block title %}Edit Item{% endblock %}

{% block body %}
    <div class="cont-hidden flex-wrap margin-top-0 padding-top-0">
        <div class="cont-title padding-top-0 margin-top-0">
            <h1>Modifier le jeu: <span style="color: #25963F">{{ item.name }}</span></h1>


            {% if  loan %}
                <p class="font-size-20 color-red">
                    Le jeu est incomplet suite à un prêt, pour résoudre le litige vous avez 3 solutions en cliquant sur
                    le
                    bouton suivant:
                    <button class="warning-button" style="min-width: 100px"><a
                                href="{{ path('app_family_resolve', {'idFamily': loan.family.id}) }}">Se rendre à la
                            page de
                            résolution des litige.</a></button>

                </p>
            {% endif %}

        </div>
        <div class="cont radius-bottom flex-wrap margin-top-0">

            {% for dependance in dependances %}

                {% if dependance.category %}
                    <p>
                        {{ dependance.category.categoryName }}
                        <button>
                            <a
                                    href="{{ path('app_category_dependance_edit', {'id': dependance.category.id }) }}">Modifier
                                ou supprimer
                            </a>
                        </button>
                    </p>
                {% endif %}

            {% endfor %}
            {{ include('item/_form.html.twig', {'button_label': 'Mettre à jour'}) }}


        </div>
    </div>
{% endblock %}
