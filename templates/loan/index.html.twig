{% extends 'base.html.twig' %}

{% block title %}Loan index{% endblock %}

{% block body %}
    <h1>Loan index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>StartDateTime</th>
                <th>DatePreviewBack</th>
                <th>EffectReturnDateTime</th>
                <th>CompletenessReturn</th>
                <th>ReturnComment</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for loan in loans %}
            <tr>
                <td>{{ loan.id }}</td>
                <td>{{ loan.startDateTime ? loan.startDateTime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ loan.datePreviewBack ? loan.datePreviewBack|date('Y-m-d') : '' }}</td>
                <td>{{ loan.effectReturnDateTime ? loan.effectReturnDateTime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ loan.completenessReturn ? 'Yes' : 'No' }}</td>
                <td>{{ loan.returnComment }}</td>
                <td>
                    <a href="{{ path('app_loan_show', {'id': loan.id}) }}">show</a>
                    <a href="{{ path('app_loan_edit', {'id': loan.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_loan_new') }}">Create new</a>
{% endblock %}
